
<div class="content bg-gray-lighter">
    <div class="row items-push">
        <div class="col-sm-12">
            <h1 class="page-heading">
                <i class="fa fa-tag"></i> Tags
            </h1>
        </div>
    </div>
</div>

<div class="content">
    <div class="block">
        <div class="block-header bg-gray-lighter">
            {{#link-to "index.tag.add" tagName="button" class="btn btn-sm btn-success"}} <i class="fa fa-plus"></i> Add{{/link-to}}
        </div>
        <div class="block-content">
            <p class="push-30"></p>
            <div class="table-responsive">
                <table class="table table-striped table-vcenter">
                    <thead>
                        <tr>
                            <th class="width-50-pourcent">
                              Title
                            </th>
                            <th class="width-15-pourcent">
                              Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                      {{#each results as |tag|}}
                         <tr>
                             <td class="font-w600">{{tag.title}}</td>
                             <td>
                                 <div class="btn-group">
                                    {{#link-to "index.tag.edit" tag tagName="button" class="btn btn-sm btn-primary"}} <i class="fa fa-pencil-square-o"></i> Edit{{/link-to}}
                                 </div>
                             </td>
                         </tr>
                      {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
